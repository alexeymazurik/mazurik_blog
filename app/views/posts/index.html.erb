<p id="notice"><%= notice %></p>

<h1>Listing Posts <%= link_to 'New Post', new_post_path, class: 'btn btn-sm btn-default' %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= link_to post.title, post %>
        </td>
        <td>
          <%= post.text %>
        </td>
        <td>
          <div class="text-right">
            <%= link_to 'Edit', edit_post_path(post), class: 'btn btn-sm  btn-warning' %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
