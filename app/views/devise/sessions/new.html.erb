<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <h2>Log in</h2>

    <% console %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="form-group <%= 'has-error' if devise_errors_in_field?(:email) %>">
          <%= f.label :email, 'Email: ',class: 'control-label' %>
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
          <% if devise_errors_in_field?(:email) %>
            <span class="help-block">
              <%= devise_errors[:email][0] %>
            </span>
          <% end %>
        </div>

        <div class="form-group <%= 'has-error' if devise_errors_in_field?(:password) %>">
          <%= f.label :password, 'Password:', class: 'control-label' %>
          <%= f.password_field :password, class: 'form-control' %>
          <% if devise_errors_in_field?(:password) %>
            <span class="help-block">
              <%= devise_errors[:password][0] %>
            </span>
          <% end %>
        </div>

        <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
        <% end -%>

        <div class="form-group text-center">
          <%= f.submit "Sign in", class: 'btn btn-lg btn-success' %>
          <div>
            or
            <%= render "devise/shared/links" %>
          </div>
        </div>
    <% end %>

  </div>
</div>
